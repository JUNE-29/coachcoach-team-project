<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="coachPage/*/*" template="/WEB-INF/tiles/coachPage/template.jsp">
         
        <put-attribute name="side" value="/WEB-INF/tiles/coachPage/side.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/coachPage/{1}/{2}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/coachPage/footer.jsp" />
    </definition>
    
    
    <definition name="myPage/*/*" template="/WEB-INF/tiles/myPage/template.jsp">
         
        <put-attribute name="side" value="/WEB-INF/tiles/myPage/side.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/myPage/{1}/{2}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/myPage/footer.jsp" />
    </definition>
    
</tiles-definitions>


