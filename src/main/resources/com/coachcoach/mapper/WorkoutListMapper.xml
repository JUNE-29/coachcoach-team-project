<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.coachcoach.dao.WorkoutList">

  <resultMap type="WorkoutList" id="WorkoutListMap">
    <id column="workout_list_no"  property="no"/>
    <result column="member_no"       property="memberNo"/>
    <result column="workout_date"       property="date"/>
    <result column="walk_count"  property="walkCount"/>
    <result column="etc"  property="etc"/>
    
    <association property="member" javaType="Member">
      <id column="member_no"   property="no"/>
    </association>
    
    
  </resultMap>
  
   <insert id="insert" parameterType="WorkoutList"
   useGeneratedKeys="true" keyColumn="workout_list_no" keyProperty="no">
    insert into WorkoutList(
      member_no,
      workout_date,
      etc
    ) values(
      #{memberNo},
      #{date}
      #{walkCount}
      #{etc}
    )
  </insert>
  
  <select id="findAll" resultMap="WorkoutListMap" parameterType="int">
  select
    workout_date,
    walk_count,
    etc
  from 
    workout_list
  where
    workout_list_no=#{member.no}
  </select>  
  
  
    <update id="update" parameterType="Weight">
    update
      workout_date,
      walk_count,
      etc
    set
      workout_date=#{date}
      walk_count={#walkCount}
      etc={#etc}
    where 
      member_no=#{no}
  </update>
  
  
  <delete id="delete" parameterType="int">
    delete
     from workout_list
    where
     workout_list_no=#{no}
  </delete>
  
</mapper>







